<h1><strong><%= @restaurant.name %> </strong></h1>
<p><%= @restaurant.address %></p>
<% @restaurant.reviews.each do |review| %>
  <p><%= review.rating %> </p>
  <p><%= review.content %> </p>
<% end %>
<%= link_to "Back to restaurant list", restaurants_path, class: "btn btn-primary"%>
<%= link_to "Write a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
